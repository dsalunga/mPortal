<%@ Page Language="C#" AutoEventWireup="true" Inherits="WCMS.WebSystem.Windows.LinkBrowser"
    CodeBehind="LinkBrowser.aspx.cs" %>
<%@ Import Namespace="WCMS.Common.Utilities" %>
<!DOCTYPE html>
<html>
<head runat="server">
    <title>Link Browser</title>
    <link href="<%= WebUtil.Version("~/content/assets/styles/websystem.admin.min.css") %>" rel="stylesheet"
        type="text/css" media="all" />
    <script src="<%= WebUtil.Version("~/content/assets/scripts/wcms.core.min.js") %>" type="text/javascript"></script>
    <script type="text/javascript">
        function ReturnLink(linkUrl) {
            var controlName = document.getElementById("hControlName").value;
            var inputControl = window.opener.document.getElementById(controlName);
            if (inputControl != null) {
                inputControl.value = linkUrl;
                WCMS.Dom.FireEvent(inputControl, "change");
                self.close();
            }
        }
    </script>
</head>
<body>
    <form id="form1" runat="server">
    <input type="hidden" id="hControlName" value="" runat="server" />
    <div>
        <asp:TreeView ID="TreeView1" runat="server" OnSelectedNodeChanged="TreeView1_SelectedNodeChanged"
            AutoGenerateDataBindings="False" EnableViewState="False" CollapseImageUrl="~/Content/Assets/Images/TreeView/collapse.gif"
            ExpandImageUrl="~/Content/Assets/Images/TreeView/expand.gif">
            <ParentNodeStyle Font-Bold="False" ImageUrl="~/Content/Assets/Images/TreeView/folder2.gif" />
            <HoverNodeStyle Font-Underline="True" />
            <SelectedNodeStyle BackColor="White" BorderColor="#888888" BorderStyle="Solid" BorderWidth="1px"
                Font-Underline="False" HorizontalPadding="3px" VerticalPadding="1px" />
            <NodeStyle Font-Names="Verdana" Font-Size="8pt" ForeColor="Black" HorizontalPadding="5px"
                NodeSpacing="1px" VerticalPadding="2px" />
            <RootNodeStyle ImageUrl="~/Content/Assets/Images/TreeView/web.gif" />
            <LeafNodeStyle ImageUrl="~/Content/Assets/Images/TreeView/txt.gif" />
        </asp:TreeView>
    </div>
    </form>
</body>
</html>
